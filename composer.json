{
  "name": "vaizard/glued-skeleton",
  "description": "Web application skeleton that uses the Slim4 Framework, PHP-DI, Nyholm PSR7 and Twig.",
  "license": "MIT",
  "authors": [
    {
      "name": "Adrian Suter",
      "email": "adrian@suter-wirz.ch"
    },
    {
      "name": "Pavel Stratil",
      "email": "pavel@vaizard.org"
    }   
  ],
  "autoload": {
    "psr-4": {
      "App\\": "glued/Core/",
      "Tutorial\\": "glued/Tutorial/"
    }
  },
  "require": {
    "php": "^7.2",
    "slim/slim": "^4.1",
    "slim/twig-view": "3.0.0-alpha",
    "slim/csrf": "^0.8.3",
    "slim/flash": "^0.4.0",
    "slim/http": ">0.6",
    "nyholm/psr7": "^1.1",
    "nyholm/psr7-server": "^0.3",
    "php-di/php-di": "^6",
    "robmorgan/phinx": "^0.10.8",
    "joshcam/mysqli-database-class": "^2.9.2",
    "monolog/monolog": "^2.0.0-beta2",
    "phpmailer/phpmailer": "^6.0",
    "respect/validation": "^1.1",
    "opis/json-schema": "^1.0",
    "casbin/casbin": "^0.2",
    "casbin/database-adapter": "^0.4",
    "facebook/graph-sdk": "^5.7",
    "tuupola/slim-jwt-auth": "^3.4.0",
    "phpoffice/phpspreadsheet": "^1.8.2",
    "foxy/foxy": "^1.0.0",
    "odan/twig-assets": ">2",
    "odan/twig-translation": ">1",
    "odan/phinx-migrations-generator": ">4"
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "post-update-cmd": [ 
      "mkdir -p public/assets/js",
      "mkdir -p public/assets/css",
      "mkdir -p public/assets/fonts",
      "mkdir -p public/assets/img"
    ],
    "post-install-cmd": [
      "mkdir -p public/assets/js",
      "mkdir -p public/assets/css",
      "mkdir -p public/assets/fonts",
      "mkdir -p public/assets/img"
    ]
  },
  "extra": {
    "foxy": true
  },
  "config": {
    "foxy": {
      "manager": "yarn",
      "manager-options": "--modules-folder=./public/assets/node_modules"
    }
  }
}
